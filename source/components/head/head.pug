mixin head(data)
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')

    title= data.title || ''
    meta(name='description', content= data.description || '')

    meta(name='keywords', content='')

    if data.adaptive
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, minimal-ui')
    else
        meta(name='viewport', content='width=1280, initial-scale=1')

    meta(name='format-detection', content='telephone=no')
    meta(name='format-detection', content='address=no')
    meta(name='author', content='')
    meta(name='robots', content='noodp, noydir')
    meta(name='imagetoolbar', content='no')
    meta(name='msthemecompatible', content='no')
    meta(name='cleartype', content='no')
    meta(http-equiv="imagetoolbar", content="no")

    if data.adaptive
        meta(name='MobileOptimized', content='320')
        //- This make sence for mobile browsers. It means, that content has been optimized for mobile browsers
        meta(name='HandheldFriendly', content='true')

    meta(name='google', content='notranslate')
    //-meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black-translucent')
    meta(name='application-name', content='')
    meta(name='msapplication-tooltip', content='')

    if data.icons
        - var version = data.favicon.version ? '?v=' + data.favicon.version : '';

        each size in data.favicon.touch
            link(rel='apple-touch-icon', sizes=size, href=data.favicon.path(`apple-touch-icon-${size}.png`))
        //-each icon in data.favicon.icon
            link(rel='icon', type='image/png', sizes=icon, href='/static/favicon/favicon-#{icon}.png#{version}')

        link(rel='icon', type='image/png', href=data.favicon.path('favicon-16x16.png'), sizes='16x16')
        link(rel='icon', type='image/png', href=data.favicon.path('favicon-32x32.png'), sizes='32x32')
        link(rel='icon', type='image/png', href=data.favicon.path('favicon-194x194.png'), sizes='194x194')
        link(rel='manifest', href=data.favicon.path('manifest.json'))
        link(rel='mask-icon', href=data.favicon.path('safari-pinned-tab.svg'), color=data.favicon.safariPinnedTab)
        link(rel='shortcut icon', href=data.favicon.path('favicon.ico'))
        meta(name='msapplication-TileColor', content=data.favicon.tileColor)
        meta(name='msapplication-TileImage', content=data.favicon.path('mstile-144x144.png'))
        meta(name='msapplication-config', content=data.favicon.path('browserconfig.xml'))
        meta(name='theme-color', content=data.favicon.themeColor)

    if data.useSocialMetaTags
        // Google Plus
        meta(itemprop='name', content='')
        meta(itemprop='description', content='')
        meta(itemprop='image', content='')
        // Twitter
        meta(name='twitter:card', content='summary_large_image')
        meta(name='twitter:site', content='')
        meta(name='twitter:title', content='')
        meta(name='twitter:description', content='')
        meta(name='twitter:creator', content='')
        meta(name='twitter:image:src', content='')
        meta(name='twitter:player', content='')
        meta(property='twitter:url', content='')
        // Open Graph General (Facebook & Pinterest)
        meta(property='fb:admins', content='')
        // <meta property="fb:app_id" content=""/>
        meta(property='og:url', content='')
        meta(property='og:title', content='')
        meta(property='og:description', content='')
        meta(property='og:site_name', content='')
        meta(property='og:image', content='')
        meta(property="og:image:type", content="image/jpeg")
        meta(property="og:image:width", content="500")
        meta(property="og:image:height", content="300")
        meta(property='og:type', content='')
        meta(property='og:locale', content='ru_RU')
        // <meta property="og:audio" content=""/>
        meta(property='og:video', content='')
        // https://youtu.be/K3rBeHNs9mk
        // Open Graph Article (Facebook & Pinterest)
        meta(property='article:author', content='')
        meta(property='article:section', content='Manufacture')
        meta(property='article:tag', content='Technologies')
        meta(property='article:published_time', content='')
        meta(property='article:modified_time', content='')
        meta(property='article:expiration_time', content='')
        // VK
        meta(name='title', content='')
        link(rel='image_src', href='')

        link(rel="shortcut icon" type="image/x-icon" href="favicon.ico")


    //- link(href='//fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    //- script(src='//cdn.polyfill.io/v2/polyfill.min.js')
    script.
        document.documentElement.setAttribute('data-browser', navigator.userAgent);
    script.
        (function (H) {H.className = H.className.replace(/\bno-js\b/, 'js')})(document.documentElement)
